{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "paths": {
    "~/*": ["./src/*"]
  },
  "include": ["src/**/*"],
  "ts-node": {
    "swc": true
  }
}
